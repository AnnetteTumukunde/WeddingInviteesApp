@model WeddingInviteesApp.Models.EventRegistration

@{
    ViewBag.Title = "Create";
}

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Add New Invitation</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            Event
            <div class="col-md-10">
                @Html.DropDownList("eventid", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.eventid, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            Invitee
            <div class="col-md-10">
                @Html.DropDownList("attendee", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.attendee, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
